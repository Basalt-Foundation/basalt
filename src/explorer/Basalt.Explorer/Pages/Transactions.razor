@page "/transactions"
@inject BasaltApiClient Api

<PageTitle>Basalt Explorer - Transactions</PageTitle>

<h2>Recent Transactions</h2>

@if (_transactions != null && _transactions.Length > 0)
{
    <table class="data-table">
        <thead>
            <tr>
                <th>Hash</th>
                <th>Type</th>
                <th>Sender</th>
                <th>To</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tx in _transactions)
            {
                <tr @onclick="() => NavigateToTx(tx.Hash)" style="cursor:pointer">
                    <td class="hash">@TruncateHash(tx.Hash)</td>
                    <td>@tx.Type</td>
                    <td class="hash">@TruncateHash(tx.Sender)</td>
                    <td class="hash">@TruncateHash(tx.To)</td>
                    <td>@tx.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (_loading)
{
    <div class="loading">Loading transactions...</div>
}
else
{
    <div class="empty-state">No transactions found.</div>
}

@code {
    [Inject] private NavigationManager Nav { get; set; } = default!;

    private TransactionDto[]? _transactions;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        _transactions = await Api.GetRecentTransactionsAsync();
        _loading = false;
    }

    private void NavigateToTx(string hash) => Nav.NavigateTo($"/tx/{hash}");

    private static string TruncateHash(string hash)
    {
        if (hash.Length <= 16) return hash;
        return hash[..10] + "..." + hash[^6..];
    }
}
