@page "/transactions"
@inject BasaltApiClient Api
@inject NavigationManager Nav

<PageTitle>Basalt Explorer - Transactions</PageTitle>

<div class="card">
    <div class="card-header">Recent Transactions</div>
    <div class="card-body">
        @if (_transactions != null && _transactions.Length > 0)
        {
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Hash</th>
                        <th>Block</th>
                        <th>Type</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tx in _transactions)
                    {
                        <tr @onclick="() => Nav.NavigateTo(TxPath(tx.Hash))" style="cursor:pointer">
                            <td class="hash truncate">@TruncateHash(tx.Hash)</td>
                            <td>
                                @if (tx.BlockNumber.HasValue)
                                {
                                    <span class="hash" @onclick="() => Nav.NavigateTo(BlockPath(tx.BlockNumber.Value))" @onclick:stopPropagation="true">@tx.BlockNumber</span>
                                }
                            </td>
                            <td>@tx.Type</td>
                            <td class="hash truncate">@TruncateHash(tx.Sender)</td>
                            <td class="hash truncate">@TruncateHash(tx.To)</td>
                            <td>@tx.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else if (_loading)
        {
            <div class="loading">Loading transactions...</div>
        }
        else
        {
            <div class="empty-state">No transactions found.</div>
        }
    </div>
</div>

@code {
    private TransactionDto[]? _transactions;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        _transactions = await Api.GetRecentTransactionsAsync();
        _loading = false;
    }

    private static string TxPath(string hash) => $"/tx/{hash}";
    private static string BlockPath(ulong number) => $"/block/{number}";

    private static string TruncateHash(string hash)
    {
        if (hash.Length <= 16) return hash;
        return hash[..10] + "..." + hash[^6..];
    }
}
