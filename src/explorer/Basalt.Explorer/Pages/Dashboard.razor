@page "/"
@inject BasaltApiClient Api
@inject NavigationManager Nav
@inject Services.BlockWebSocketService WsService
@inject Services.ToastService Toasts
@implements IAsyncDisposable

<PageTitle>Basalt Explorer - Dashboard</PageTitle>

@if (_status != null)
{
    <div class="stats-grid">
        <div class="stat-card">
            <div class="label">Block Height</div>
            <div class="value link" @onclick="NavigateToBlocks">@_status.BlockHeight.ToString("N0")</div>
        </div>
        <div class="stat-card">
            <div class="label">Mempool</div>
            <div class="value">@_status.MempoolSize</div>
        </div>
        <div class="stat-card">
            <div class="label">Protocol</div>
            <div class="value">v@(_status.ProtocolVersion)</div>
        </div>
        <div class="stat-card">
            <div class="label">Latest Block</div>
            <div class="value truncate hash link" style="font-size:0.9rem"
                 @onclick="NavigateToLatestBlock">@FormatHelper.TruncateHash(_status.LatestBlockHash)</div>
        </div>
        <div class="stat-card">
            <div class="label">Status</div>
            <div class="value">
                <span class="live-indicator @(WsService.IsConnected ? "connected" : "disconnected")">
                    @(WsService.IsConnected ? "LIVE" : "POLLING")
                </span>
            </div>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">Latest Block</div>
    <div class="card-body">
        @if (_latestBlock != null)
        {
            <div class="detail-row">
                <span class="detail-label">Number</span>
                <span class="detail-value hash link" @onclick="() => NavigateToBlock(_latestBlock.Number)">@_latestBlock.Number</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Hash</span>
                <span class="detail-value hash link" @onclick="() => NavigateToBlock(_latestBlock.Number)">@_latestBlock.Hash</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Timestamp</span>
                <span class="detail-value">@_latestBlock.FormattedTime</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Proposer</span>
                <span class="detail-value hash link" @onclick="() => NavigateToAccount(_latestBlock.Proposer)">@_latestBlock.Proposer</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Transactions</span>
                <span class="detail-value">@_latestBlock.TransactionCount</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Gas</span>
                <span class="detail-value">
                    @_latestBlock.GasUsed / @_latestBlock.GasLimit
                    <span class="gas-bar">
                        <span class="gas-bar-fill" style="width: @(_latestBlock.GasPercent.ToString("F1"))%"></span>
                    </span>
                </span>
            </div>
        }
        else if (_error != null)
        {
            <div class="error-message">@_error</div>
        }
        else
        {
            <div class="loading">Connecting to node...</div>
        }
    </div>
</div>

@if (_recentTxs != null && _recentTxs.Length > 0)
{
    <div class="card">
        <div class="card-header">
            Recent Transactions
            <a href="/transactions" class="badge badge-success" style="text-decoration:none">View All</a>
        </div>
        <div class="card-body">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Hash</th>
                        <th>Type</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tx in _recentTxs)
                    {
                        <tr @onclick="() => NavigateToTx(tx.Hash)" style="cursor:pointer">
                            <td data-label="Hash" class="hash truncate">@FormatHelper.TruncateHash(tx.Hash)</td>
                            <td data-label="Type"><span class="badge @FormatHelper.GetTxTypeBadgeClass(tx.Type)">@FormatHelper.GetTxTypeLabel(tx.Type)</span></td>
                            <td data-label="From" class="hash truncate">@FormatHelper.TruncateHash(tx.Sender)</td>
                            <td data-label="To" class="hash truncate">@FormatHelper.TruncateHash(tx.To)</td>
                            <td data-label="Value">@FormatHelper.FormatBslt(tx.Value)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private NodeStatusDto? _status;
    private BlockDto? _latestBlock;
    private TransactionDto[]? _recentTxs;
    private string? _error;
    private Timer? _timer;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();

        WsService.OnNewBlock += HandleNewBlock;
        _ = WsService.ConnectAsync();

        // Increase poll interval as fallback
        _timer = new Timer(async _ =>
        {
            if (!WsService.IsConnected)
            {
                await LoadData();
                await InvokeAsync(StateHasChanged);
            }
        }, null, 10000, 10000);
    }

    private async void HandleNewBlock(WebSocketBlockEvent block)
    {
        await InvokeAsync(async () =>
        {
            if (_status != null)
                _status.BlockHeight = block.Number;
            Toasts.Info($"New block #{block.Number}");
            await LoadData();
            StateHasChanged();
        });
    }

    private async Task LoadData()
    {
        try
        {
            _status = await Api.GetStatusAsync();
            _latestBlock = await Api.GetLatestBlockAsync();
            var allTxs = await Api.GetRecentTransactionsAsync();
            _recentTxs = allTxs?.Take(10).ToArray();
            _error = _status == null ? "Cannot connect to Basalt node." : null;
        }
        catch (Exception ex)
        {
            _error = "Error: " + ex.Message;
        }
    }

    private void NavigateToBlocks() => Nav.NavigateTo("/blocks");

    private void NavigateToLatestBlock()
    {
        if (_latestBlock != null)
            NavigateToBlock(_latestBlock.Number);
    }

    private void NavigateToBlock(ulong number) => Nav.NavigateTo("/block/" + number);

    private void NavigateToAccount(string address) => Nav.NavigateTo("/account/" + address);

    private void NavigateToTx(string hash) => Nav.NavigateTo("/tx/" + hash);

    public async ValueTask DisposeAsync()
    {
        _timer?.Dispose();
        WsService.OnNewBlock -= HandleNewBlock;
        await WsService.DisposeAsync();
    }
}
