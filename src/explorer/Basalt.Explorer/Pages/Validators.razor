@page "/validators"
@inject BasaltApiClient Api
@inject NavigationManager Nav

<PageTitle>Basalt Explorer - Validators</PageTitle>

<div class="card">
    <div class="card-header">Validators</div>
    <div class="card-body">
        @if (_validators != null && _validators.Length > 0)
        {
            <table class="data-table">
                <thead>
                    <tr>
                        <th style="cursor:pointer" @onclick='() => Sort("address")'>Address @SortIcon("address")</th>
                        <th style="cursor:pointer" @onclick='() => Sort("stake")'>Total Stake @SortIcon("stake")</th>
                        <th>Self Stake</th>
                        <th>Delegated</th>
                        <th style="cursor:pointer" @onclick='() => Sort("status")'>Status @SortIcon("status")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in SortedValidators)
                    {
                        <tr>
                            <td data-label="Address" class="hash" style="cursor:pointer" @onclick="() => NavigateToAccount(v.Address)">@FormatHelper.TruncateHash(v.Address)</td>
                            <td data-label="Total Stake">@FormatHelper.FormatBslt(v.Stake)</td>
                            <td data-label="Self Stake">@FormatHelper.FormatBslt(v.SelfStake)</td>
                            <td data-label="Delegated">@FormatHelper.FormatBslt(v.DelegatedStake)</td>
                            <td data-label="Status"><span class="status-badge @v.Status.ToLowerInvariant()">@v.Status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else if (_loading)
        {
            <div class="loading">Loading validators...</div>
        }
        else
        {
            <div class="empty-state">No validators found.</div>
        }
    </div>
</div>

@code {
    private ValidatorDto[]? _validators;
    private bool _loading = true;
    private string _sortBy = "stake";
    private bool _sortDesc = true;

    private ValidatorDto[] SortedValidators => _validators == null ? [] : _sortBy switch
    {
        "address" => (_sortDesc ? _validators.OrderByDescending(v => v.Address) : _validators.OrderBy(v => v.Address)).ToArray(),
        "status" => (_sortDesc ? _validators.OrderByDescending(v => v.Status) : _validators.OrderBy(v => v.Status)).ToArray(),
        _ => (_sortDesc ? _validators.OrderByDescending(v => decimal.TryParse(v.Stake, out var s) ? s : 0) : _validators.OrderBy(v => decimal.TryParse(v.Stake, out var s) ? s : 0)).ToArray(),
    };

    private void Sort(string column)
    {
        if (_sortBy == column)
            _sortDesc = !_sortDesc;
        else
        {
            _sortBy = column;
            _sortDesc = true;
        }
    }

    private string SortIcon(string column) => _sortBy == column ? (_sortDesc ? "\u25bc" : "\u25b2") : "";

    protected override async Task OnInitializedAsync()
    {
        _validators = await Api.GetValidatorsAsync();
        _loading = false;
    }

    private void NavigateToAccount(string address)
    {
        Nav.NavigateTo("/account/" + address);
    }
}
