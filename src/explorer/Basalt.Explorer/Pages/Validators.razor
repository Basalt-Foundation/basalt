@page "/validators"
@inject BasaltApiClient Api
@inject NavigationManager Nav

<PageTitle>Basalt Explorer - Validators</PageTitle>

<div class="card">
    <div class="card-header">Validators</div>
    <div class="card-body">
        @if (_validators != null && _validators.Length > 0)
        {
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Address</th>
                        <th>Total Stake</th>
                        <th>Self Stake</th>
                        <th>Delegated</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in _validators)
                    {
                        <tr>
                            <td class="hash" style="cursor:pointer" @onclick="() => NavigateToAccount(v.Address)">@FormatHelper.TruncateHash(v.Address)</td>
                            <td>@FormatHelper.FormatBslt(v.Stake)</td>
                            <td>@FormatHelper.FormatBslt(v.SelfStake)</td>
                            <td>@FormatHelper.FormatBslt(v.DelegatedStake)</td>
                            <td><span class="status-badge @v.Status.ToLowerInvariant()">@v.Status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else if (_loading)
        {
            <div class="loading">Loading validators...</div>
        }
        else
        {
            <div class="empty-state">No validators found.</div>
        }
    </div>
</div>

@code {
    private ValidatorDto[]? _validators;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        _validators = await Api.GetValidatorsAsync();
        _loading = false;
    }

    private void NavigateToAccount(string address)
    {
        Nav.NavigateTo("/account/" + address);
    }
}
