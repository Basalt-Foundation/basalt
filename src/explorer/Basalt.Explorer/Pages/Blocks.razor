@page "/blocks"
@inject BasaltApiClient Api
@inject NavigationManager Nav

<PageTitle>Basalt Explorer - Blocks</PageTitle>

<div class="card">
    <div class="card-header">
        Blocks
        <button class="badge badge-success" @onclick="LoadBlocks">Refresh</button>
    </div>
    <div class="card-body">
        @if (_blocks.Length > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>Block</th>
                        <th>Hash</th>
                        <th>Time</th>
                        <th>Proposer</th>
                        <th>Txs</th>
                        <th>Gas Used</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var block in _blocks)
                    {
                        <tr @onclick="() => NavigateToBlock(block.Number)" style="cursor: pointer">
                            <td>@block.Number</td>
                            <td class="truncate hash">@TruncateHash(block.Hash)</td>
                            <td>@block.FormattedTime</td>
                            <td class="truncate hash">@TruncateHash(block.Proposer)</td>
                            <td>@block.TransactionCount</td>
                            <td>
                                @block.GasUsed
                                <span class="gas-bar">
                                    <span class="gas-bar-fill" style="width: @(block.GasPercent.ToString("F1"))%"></span>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="pagination">
                <button @onclick="PreviousPage" disabled="@(_page <= 1)">Previous</button>
                <span class="page-info">Page @_page of @TotalPages</span>
                <button @onclick="NextPage" disabled="@(_page >= TotalPages)">Next</button>
            </div>
        }
        else if (_error != null)
        {
            <div class="error-message">@_error</div>
        }
        else
        {
            <div class="loading">Loading blocks...</div>
        }
    </div>
</div>

@code {
    private BlockDto[] _blocks = [];
    private int _page = 1;
    private const int PageSize = 20;
    private long _totalItems;
    private string? _error;

    private long TotalPages => Math.Max(1, (_totalItems + PageSize - 1) / PageSize);

    protected override async Task OnInitializedAsync() => await LoadBlocks();

    private async Task LoadBlocks()
    {
        _error = null;

        var result = await Api.GetBlocksPageAsync(_page, PageSize);
        if (result == null)
        {
            _error = "Cannot connect to node.";
            return;
        }

        _blocks = result.Items;
        _totalItems = result.TotalItems;
    }

    private async Task PreviousPage() { if (_page > 1) { _page--; await LoadBlocks(); } }
    private async Task NextPage() { if (_page < TotalPages) { _page++; await LoadBlocks(); } }

    private void NavigateToBlock(ulong number) => Nav.NavigateTo($"/block/{number}");

    private static string TruncateHash(string hash)
    {
        if (hash.Length <= 16) return hash;
        return hash[..10] + "..." + hash[^6..];
    }
}
